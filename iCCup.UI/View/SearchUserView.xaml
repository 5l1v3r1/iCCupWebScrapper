<UserControl 
    x:Class="iCCup.UI.View.SearchUserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    DataContext="{Binding Source={StaticResource Locator}, Path=SearchUser}">
    <DockPanel>
        <materialDesign:TransitioningContent DockPanel.Dock="Top">
            <materialDesign:TransitioningContent.OpeningEffects>
                <materialDesign:TransitionEffect Kind="SlideInFromTop" Duration="0:0:0.5" />
                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.5" />
            </materialDesign:TransitioningContent.OpeningEffects>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
                <TextBox 
                    materialDesign:HintAssist.Hint="Search" 
                    Margin="10" Width="100" VerticalAlignment="Stretch" 
                    Text="{Binding PlayerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button 
                    VerticalAlignment="Stretch" Width="80" IsEnabled="{Binding AllowPrevPage}" 
                    Command="{Binding PrevPageCommand}" Style="{StaticResource MaterialDesignFlatButton}">Prev</Button>
                <Button 
                    VerticalAlignment="Stretch" Width="80" IsEnabled="{Binding AllowNextPage}" 
                    Command="{Binding NextPageCommand}" Style="{StaticResource MaterialDesignFlatButton}">Next</Button>
            </StackPanel>
        </materialDesign:TransitioningContent>

        <ScrollViewer Margin="0 12 0 0">
            <ItemsControl ItemsSource="{Binding Players}" VerticalAlignment="Top" Margin="0 4 0 0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:TransitioningContent>
                            <materialDesign:TransitioningContent.OpeningEffects>
                                <materialDesign:TransitionEffect Kind="SlideInFromRight" Duration="0:0:0.4" />
                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.4" />
                            </materialDesign:TransitioningContent.OpeningEffects>
                            <materialDesign:Card Width="150" Margin="10">
                                <Grid>
                                    <TextBlock Margin="10" Text="{Binding Nickname}" VerticalAlignment="Center" />
                                    <Button VerticalAlignment="Stretch" HorizontalAlignment="Right"></Button>
                                </Grid>
                            </materialDesign:Card>
                        </materialDesign:TransitioningContent>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
